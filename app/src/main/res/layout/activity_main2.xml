<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a25467.moneymanager.Main2Activity">
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/addnotes"
        android:text="Add Notes"
        android:textAllCaps="false"/>
    <Button

        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/newpay"
        android:text="New Pay"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/newincome"
        android:text="New Income"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/datamanager"
        android:text="Data Manager"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/settings"
        android:text="setings"
        android:textAllCaps="false"/>


</LinearLayout>
